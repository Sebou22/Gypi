<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<record id="product_inherit" model="ir.ui.view">
          <field name="name">product.qrcode</field>
          <field name="model">product.template</field>
          <field name="inherit_id" ref="product.product_template_only_form_view"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name = 'barcode']" position="after">
                  <field name="qr_code" widget='image' class="oe_avatar"
                   />

              </xpath>
              <xpath expr="//notebook" position="inside">
                  <page string="Restricted access">
                      <group >
                          <group>
                              <field name="restriction_type"  widget="radio"/>
                              <field name="restriction_contacts"  widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}" attrs="{'invisible': [('restriction_type', '!=', 'section')],'required': [('restriction_type', '=', 'section')]}"/>
                          </group>
                      </group>
                  </page>
              </xpath>
   </field>
</record>
<record id="product_public_category_form_view_inherit" model="ir.ui.view">
          <field name="name">product.public.category.form.inherit</field>
          <field name="model">product.public.category</field>
          <field name="inherit_id" ref="website_sale.product_public_category_form_view"/>
          <field name="arch" type="xml">
              <xpath expr="//sheet" position="inside">
                  <notebook>
                  <page string="Restricted access">
                      <group >
                          <group>
                              <field name="restriction_type"  widget="radio"/>
                              <field name="restriction_contacts"  widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}" attrs="{'invisible': [('restriction_type', '!=', 'section')],'required': [('restriction_type', '=', 'section')]}"/>
                          </group>
                      </group>
                  </page>
                  </notebook>
              </xpath>
   </field>
</record>
</odoo>