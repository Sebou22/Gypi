<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<!-- form view -->
            <record model="ir.ui.view" id="bordereau_payment_form_view">
            <field name="name">bordereau.payment.form</field>
            <field name="model">bordereau.payment</field>
            <field name="arch" type="xml">
                   <form>
                    <sheet>

                        <group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="date_payment" invisible="1"/>

                            </group>
                        </group>
                        <footer>
                            <button name="action_print_bordereau_payment" string="Imprimer bordereau" type="object" class="oe_highlight"/>
                            <button string="Annuler" class="btn btn-secondary" special="cancel" />
                        </footer>
                    </sheet>
                   </form>
            </field>
            </record>


    <!--Actions-->
    <record id="act_bordereau_payment" model="ir.actions.act_window">
        <field name="name">Bordereau Paiment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bordereau.payment</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_bordereau_payment" name="Bordereau Paiement" parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
              action="act_bordereau_payment" sequence="11"/>


</odoo>
