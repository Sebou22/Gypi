<odoo>
    <data>
        <record id="custom_pop_message_wizard_view_form" model="ir.ui.view">
            <field name="name">custom.popup.form</field>
            <field name="model">custom.pop.message</field>
            <field name="arch" type="xml">
                <form string="Custom POP Message">
                    <style>

                        .modal-header{
                        background-color: rgba(var(--info-rgb), var(--bg-opacity)) !important;
                        color: #FFFFFF;
                        }
                        .modal-lg{
                        max-width:800px;
                        }
                    </style>
                    <field name="name" readonly="1" widget="html"/>
                    <footer>
                        <button string="Fermer" class="btn btn-info" special="cancel" style="float:right !important;"/>
                    </footer>
                </form>
            </field>

        </record>

    </data>
</odoo>