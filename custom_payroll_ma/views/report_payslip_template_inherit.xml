<odoo>

    <template id="report_payslip_inherit" inherit_id="hr_payroll.report_payslip">
        <xpath expr="//table[@id='employee_info_table_1']" position="replace">
            <table class="table table-sm table-bordered">
						 <tr>
                            <td colspan="4" style="text-align: center; vertical-align: middle; background-color:black; color:white;"><strong>- SALARIÉ -</strong></td>
                        </tr>
                        <tr>
                            <td style="background-color:#D5CABD;"><strong>Name</strong></td>
                            <td><span t-field="o.employee_id"/></td>
                            <td style="background-color:#D5CABD;"><strong>Date NAISSANCE</strong></td>
                            <td><span t-field="o.employee_id.birthday"/></td>
                        </tr>
                        <tr>
                            <td style="background-color:#D5CABD;"><strong>MATRICULE</strong></td>
                            <td><span t-field="o.employee_id.id"/></td>
                            <td style="background-color:#D5CABD;"><strong>Date ENTREE</strong></td>
                            <td><span t-field="o.contract_id.date_start"/></td>
                        </tr>
                        <tr>
                            <td style="background-color:#D5CABD;"><strong>SITUATION FAMILIALE</strong></td>
                            <td><span t-field="o.employee_id.marital"/></td>
                            <td style="background-color:#D5CABD;"><strong>NOMBRE ENFANTS</strong></td>
                            <td><span t-field="o.employee_id.children"/></td>
                        </tr>
                        <tr>
                            <td style="background-color:#D5CABD;"><strong>FONCTION</strong></td>
                            <!-- <td><span t-field="o.number"/></td> -->
							<td>Manager</td>
                            <td style="background-color:#D5CABD;"><strong>N° CNSS</strong></td>
                            <td><span t-field="o.employee_id.matricule_cnss"/></td>
                        </tr>
                        <!-- <tr> -->
                            <!-- <td style="background-color:#D5CABD;"><strong>Date From</strong></td> -->
                            <!-- <td><span t-field="o.date_from"/></td> -->
                            <!-- <td style="background-color:#D5CABD;"><strong>Date To</strong></td> -->
                            <!-- <td><span t-field="o.date_to"/></td> -->
                        <!-- </tr> -->
                    </table>

					<table class="table table-sm table-bordered">
                        <tr>
                            <td style="background-color:#D5CABD;"><strong>Date From</strong></td>
                            <td><span t-field="o.date_from"/></td>
                            <td style="background-color:#D5CABD;"><strong>Date To</strong></td>
                            <td><span t-field="o.date_to"/></td>
                        </tr>
                    </table>
        </xpath>
        <xpath expr="//table[3]" position="replace">

      </xpath>
        <xpath expr="//p" position="replace"></xpath>
        <xpath expr="//div[@id='total']" position="inside">
            	<p class="text-right text-dark">NET A PAYER: <strong><span class="text-dark" t-field="o.net_wage"/> </strong></p>

					<table align="right" class="table table-sm table-bordered text-dark" style="width: 150px; text-align: center;">
                        <tr>
                            <td style="background-color:#D5CABD;"><strong class="text-dark">Mode de paiement</strong></td>
                        </tr>
						<tr>
                            <td style="background-color:white;"><strong class="text-dark">Virement</strong></td>
                        </tr>
                    </table>
        </xpath>
        <xpath expr="//p[hasclass('text-center')]" position="replace"></xpath>

    </template>
</odoo>