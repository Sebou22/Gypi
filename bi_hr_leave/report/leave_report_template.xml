<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="leave_report_template_document">
		<t t-call="web.external_layout">
			<br/><br/>
			<t t-if="len(docs) > 1">
				<div class="page">
						<table class="table table-condensed">
						<h1 class="text-center"> <span t-esc="title"/></h1>
							<thead>
								<tr>
									<th>Employee Name</th>
									<th>Departement</th>
									<th>Description</th>
									<th>Period</th>
									<th>Days</th>
									<th>Status</th>
								</tr>
							</thead>
							<tbody>
								<t t-foreach="docs" t-as="doc">
									<tr>
										<td>
											<span t-field="doc.employee_id"/>
										</td>
										<td>
											<span t-field="doc.employee_id.department_id"/>
										</td>
										<td>
											<span t-field="doc.name"/>
										</td>
										<td>
											<span t-field="doc.request_date_from"/> To <span t-field="doc.request_date_to"/>
										</td>
										<td>
											<span t-field="doc.number_of_days"/>
										</td>
										<td>
											<span t-field="doc.state"/>
										</td>
									</tr>
								</t>

							</tbody>
						</table>
				</div>
			</t>
			<t t-if="len(docs) == 1">
				<h1 class="text-center"> <span t-esc="title"/></h1>
				<div class="page">
						<t t-foreach="docs" t-as="doc">
						<h2> Employee Details</h2>
						<p>Name : <span t-field="doc.employee_id"/></p>
						<p>Position : <span t-field="doc.employee_id.job_id"/></p>
						<p>Department : <span t-field="doc.employee_id.department_id"/></p>
						<p>Email id : <span t-field="doc.employee_id.work_email"/></p>

						<h2> Leave Details</h2>
						<p>Period : <span t-field="doc.request_date_from"/> &#160;To &#160;<span t-field="doc.request_date_to"/></p>
						<p t-if="not doc.request_unit_hours">Days : <span t-field="doc.number_of_days_display"/></p>
						<p t-if="doc.leave_type_request_unit=='hour'">Heure : <span t-field="doc.number_of_hours_text"/></p>
						<p>Status : <span t-field="doc.state"/></p>
							<h2> Motif</h2>
							<p t-field="doc.name"></p>




					</t>
				</div>
			</t>
		</t>
</template>

	<template id="leave_report_template_absence">
            <t t-call="web.html_container">
                    <t t-call="bi_hr_leave.leave_report_template_document" >
                        <t t-set="title" t-value="'Bon d\'absence'"/>
                    </t>
                </t>

        </template>
	<template id="leave_report_template_exit">
            <t t-call="web.html_container">
                <t t-call="bi_hr_leave.leave_report_template_document" >
                        <t t-set="title" t-value="'Bon de sortie'"/>
                    </t>

            </t>
        </template>

</odoo>
