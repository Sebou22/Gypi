<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_contract_view_form_l10n_ma_payroll" model="ir.ui.view">
            <field name="name">hr.contract.view.form.l10n.ma_payroll</field>
            <field name="model">hr.contract</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="hr_payroll.hr_contract_form_inherit"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//notebook" position="inside">
                        <page string="Primes et autres Avantages" name="information">
                            <group name="primes-nt" string="Primes et Indemnités non taxables">
								<group>
									<field name="int1" attrs="{'readonly':[('indm_transport_select','in', ('urban', 'not_urban'))]}"/>
									<field name="int2"/>
									<field name="int3"/>
									<field name="int4"/>
									<field name="int5"/>
								</group>
								<group>
									<field name="indm_transport_select"/>
									<field name="indm_panier_select"/>
								</group>
                            </group>
                            <group name="primes-t" string="Primes et Indemnités taxables">
                                <field name="it1"/>
                                <field name="it2"/>
                                <field name="it3"/>
                                <field name="it4"/>
                                <field name="it5"/>
                            </group>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>