        <field name="res_model">article.group</field>
        <field name="view_id" ref="view_article_group_tree"/>
    </record>


    <record id="view_product_group_tree" model="ir.ui.view">
        <field name="name">product.group.tree</field>
        <field name="model">product.group</field>
        <field name="arch" type="xml">
            <tree string="Product Group" sample="1" editable="bottom">
