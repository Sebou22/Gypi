    <menuitem
            id="product_collection_menu"
            parent="sale.menu_sale_config"
            name="Collection"
            sequence="40"
            action="action_product_collection"/>

    <menuitem
            id="product_season_menu"
            parent="sale.menu_sale_config"
            name="Season"
            sequence="41"
