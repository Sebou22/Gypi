<?xml version="1.0"?>
<odoo>

    <record id="view_product_collection_tree" model="ir.ui.view">
        <field name="name">product.collection.tree</field>
        <field name="model">product.collection</field>
        <field name="arch" type="xml">
            <tree string="Product Collection" sample="1" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_product_collection" model="ir.actions.act_window">
        <field name="name">Product Collection</field>
        <field name="res_model">product.collection</field>
        <field name="view_id" ref="view_product_collection_tree"/>
    </record>


    <record id="view_product_season_tree" model="ir.ui.view">
        <field name="name">product.season.tree</field>
