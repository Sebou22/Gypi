<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_payment_form_inherit" model="ir.ui.view">
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[position()=last()-2]" position="after">
                    <group>
                        <field name="payment_mode_id" options="{'no_create': True, 'no_create_edit':True}"/>
                        <field name="bank_id" attrs="{'invisible': [('journal_type', '!=', 'bank')]}"
                                              options="{'no_create': True, 'no_create_edit':True}"/>
                        <field name="due_date"/>
                        <field name="reference" attrs="{'invisible': [('journal_type', '!=', 'bank')]}"/>
                        <field name="agency" attrs="{'invisible': [('journal_type', '!=', 'bank')]}"/>
                        <field name="swift_code" attrs="{'invisible': [('journal_type', '!=', 'bank')]}"/>
                        <field name="journal_type" invisible="1"/>
                    </group>
                </xpath>
            </field>
        
        </record>


        <record id="view_account_payment_search_inherit" model="ir.ui.view">
            <field name="name">account.payment.search.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='state']" position="after">
                    <filter string="Payment Mode" name="payment_mode" domain="[]"
                            context="{'group_by': 'payment_mode_id'}"/>
                    <separator/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>