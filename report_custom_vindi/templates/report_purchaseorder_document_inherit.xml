<odoo>

    <template id="report_purchaseorder_document_inherit" inherit_id="purchase.report_purchaseorder_document">

<xpath expr="//table[hasclass('o_main_table')]//thead" position="attributes">
    <attribute name="style">background-color:#EEEEEE;color:black !important;</attribute>
  </xpath>

        <xpath expr="//th[@name='th_description']" position="replace">

            <th name="th_your_description" class="text-start">Your Reference</th>
            <th name="th_description" class="text-start">Product</th>
            <th name="th_date_request">Time Delivery Request</th>

        </xpath>
         <xpath expr="//th[@name='th_date_req']" replace=""/>


        <xpath expr="//t[@t-if='not line.display_type']" position="replace">



            <t t-if="not line.display_type">
                               <td>---</td>
            <td id="product"><span t-field="line.name"/></td>
            <td name="td_date_req"><span t-if="line.date_planned" t-esc="line.date_planned.strftime('%d/%m/%Y')"/></td>

                                <td name="td_taxes">
                                    <span t-esc="', '.join(map(lambda x: x.description or x.name, line.taxes_id))"/>
                                </td>
                                <td class="text-end">
                                    <span t-field="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                </td>
                                <td class="text-end">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-end">
                                    <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                </td>
                            </t>
        </xpath>



    </template>
</odoo>