<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <data>
        <record model="ir.cron" id="absent_create_cron">
            <field name="name">Notification des absences</field>
            <field name="model_id" ref="hr_attendance_notification.model_hr_attendance_send" />
            <field name="state">code</field>
            <field name="code">model._cron_attendance_notification()</field>
             <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
        </record>

        <record model="ir.cron" id="retard_create_cron">
            <field name="name">Notification des retards</field>
            <field name="model_id" ref="hr_attendance_notification.model_hr_attendance_send" />
            <field name="state">code</field>
            <field name="code">model._cron_retard_notification()</field>
             <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
        </record>
    </data>
</odoo>

